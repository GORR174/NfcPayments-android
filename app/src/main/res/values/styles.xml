<resources>

    <style name="RedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="InputFieldHelpText" parent="DefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthInputFiledLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/auth_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_vertical_margin</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="AuthInputFiled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:padding">@dimen/input_padding</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>